# ============================================
# DIGITAL OCEAN
# ============================================
DIGITALOCEAN_TOKEN=
DIGITALOCEAN_SPACES_KEY=
DIGITALOCEAN_SPACES_SECRET=
DIGITALOCEAN_SPACES_ENDPOINT=
DIGITALOCEAN_APP_ID=

# ============================================
# CLAUDE / ANTHROPIC
# ============================================
ANTHROPIC_API_KEY=
CLAUDE_MODEL=claude-opus-4-5-20251101
CLAUDE_MAX_TOKENS=8192

# ============================================
# GITHUB
# ============================================
GITHUB_TOKEN=
GITHUB_OWNER=BlackRoad-OS
GITHUB_REPO=blackroad-environments
GITHUB_PROJECT_NUMBER=

# ============================================
# TERMIUS
# ============================================
TERMIUS_API_KEY=
TERMIUS_TEAM_ID=

# ============================================
# iOS APP INTEGRATIONS
# ============================================
# Working Copy (Git client for iOS)
WORKING_COPY_URL_SCHEME=working-copy://
WORKING_COPY_CALLBACK_URL=

# Shellfish (SSH client for iOS)
SHELLFISH_URL_SCHEME=shellfish://

# iSH (Linux shell for iOS)
ISH_SHARED_DIRECTORY=/private/var/mobile/Library/Mobile Documents/iCloud~app~ish~iSH/Documents

# Pyto (Python IDE for iOS)
PYTO_URL_SCHEME=pyto://
PYTO_SHARED_DIRECTORY=

# ============================================
# STATE MANAGEMENT
# ============================================
STATE_SYNC_INTERVAL_MS=30000
STATE_STORAGE_PRIMARY=cloudflare_kv
STATE_STORAGE_FALLBACK=salesforce
STATE_ENCRYPTION_KEY=

# ============================================
# HASHING
# ============================================
HASH_ALGORITHM=sha256
HASH_ITERATIONS=100000
HASH_SALT_LENGTH=32

# ============================================
# AGENT CONFIGURATION
# ============================================
AGENT_MAX_RETRIES=3
AGENT_TIMEOUT_MS=30000
AGENT_LOG_LEVEL=info

# ============================================
# PR VALIDATION
# ============================================
PR_REQUIRE_TESTS=true
PR_REQUIRE_TYPECHECK=true
PR_REQUIRE_LINT=true
PR_MIN_COVERAGE=80
